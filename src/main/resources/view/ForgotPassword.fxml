<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="262.0" prefWidth="378.0" style="-fx-background-color: #F7F9FC;" stylesheets="@../css/addEmployee.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="edu.ijse.datadish.controller.ForgotPasswordController">
    <children>
        <VBox alignment="CENTER" layoutX="39.0" layoutY="31.0" prefHeight="200" prefWidth="300" spacing="20" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Forgot Password" />
                <VBox alignment="CENTER" spacing="10">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Enter Your Email" />
                        <TextField fx:id="txtEmail" prefWidth="250" promptText="Email" style="-fx-border-radius: 4; -fx-background-radius: 4;" />
                    </children>
                </VBox>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button fx:id="btnSubmit" onAction="#submitEmail" style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 5 15;" text="Submit" />
                        <Button onAction="#cancelAction" style="-fx-background-color: #F3F4F6; -fx-text-fill: #6B7280; -fx-font-size: 14px; -fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 5 15;" text="Cancel" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
