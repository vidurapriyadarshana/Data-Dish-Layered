<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #F7F9FC;" stylesheets="@../css/addEmployee.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="edu.ijse.datadish.controller.VerifyOtpController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="200" prefWidth="300" spacing="20" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20;">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Verify OTP" />
                <VBox alignment="CENTER_LEFT" prefWidth="260" spacing="10">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Enter OTP:" />
                        <TextField fx:id="txtOtp" prefWidth="260" promptText="Enter your OTP" style="-fx-border-radius: 4; -fx-background-radius: 4;" />
                    </children>
                </VBox>
                <Button fx:id="btnVerify" onAction="#verifyOtp" style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 5 15;" text="Verify" />
            </children>
        </VBox>
    </children>
</AnchorPane>
