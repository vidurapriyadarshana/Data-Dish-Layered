<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainAnchor" prefHeight="200.0" prefWidth="160.0" stylesheets="@../css/food.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.datadish.controller.FoodController">
   <children>
      <ImageView fx:id="imageLoad" fitHeight="95.0" fitWidth="134.0" layoutX="13.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true" />
      <VBox layoutX="3.0" layoutY="104.0" prefHeight="95.0" prefWidth="154.0" spacing="2.0">
         <children>
            <Label fx:id="foodNameLabel" text="Name">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <HBox prefHeight="20.0" prefWidth="125.0" spacing="5.0">
               <children>
                  <Label fx:id="priceLabel" text="Price" />
               </children>
            </HBox>
            <Label fx:id="foodCount" layoutX="10.0" layoutY="27.0" text="Label" />
            <Button fx:id="btAddToCart" mnemonicParsing="false" onAction="#addToCartAction" prefHeight="28.0" prefWidth="153.0" text="Add To Cart" />
         </children>
      </VBox>
   </children>
</AnchorPane>
