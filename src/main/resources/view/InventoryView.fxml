<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="addItemAnchor" prefHeight="600.0" prefWidth="789.0" stylesheets="@../css/addItem.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.datadish.controller.InventoryController" style="-fx-background-color: #f9f9f9;">
    <VBox layoutX="20" layoutY="20" prefHeight="560" prefWidth="740" spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0.5, 0, 0);">
        <TableView fx:id="inventoryTable" prefHeight="400.0" prefWidth="740.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="160.0" text="Name" />
                <TableColumn fx:id="colQty" prefWidth="160.0" text="Qty" />
                <TableColumn fx:id="colStock" prefWidth="160.0" text="Stock Level" />
                <TableColumn fx:id="colAction" prefWidth="160.0" text="Actions" />
            </columns>
        </TableView>
        <Button fx:id="btAddItem" layoutX="664.0" layoutY="537.0" mnemonicParsing="false" onAction="#addItemAction" prefHeight="35.0" prefWidth="120.0" text="Add Item" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-weight: bold; -fx-border-radius: 5; -fx-font-size: 14px;" />
    </VBox>
</AnchorPane>
