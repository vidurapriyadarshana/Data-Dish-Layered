<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="355.0" prefWidth="421.0" style="-fx-background-color: #F7F9FC;" stylesheets="@../css/addEmployee.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="edu.ijse.datadish.controller.ResetPasswordController">
    <children>
        <VBox alignment="CENTER" layoutX="61.0" layoutY="47.0" prefHeight="250" prefWidth="300" spacing="20" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20;">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Reset Password" />
                <VBox alignment="CENTER_LEFT" prefWidth="260" spacing="10">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="New Password:" />
                        <PasswordField fx:id="txtNewPassword" prefWidth="260" promptText="Enter new password" style="-fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Confirm Password:" />
                        <PasswordField fx:id="txtConfirmPassword" prefWidth="260" promptText="Confirm new password" style="-fx-border-radius: 4; -fx-background-radius: 4;" />
                    </children>
                </VBox>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button fx:id="btnReset" onAction="#resetPassword" style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 5 15;" text="Reset" />
                        <Button onAction="#cancelAction" style="-fx-background-color: #F3F4F6; -fx-text-fill: #6B7280; -fx-font-size: 14px; -fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 5 15;" text="Cancel" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
