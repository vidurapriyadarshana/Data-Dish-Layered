<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F7F9FC;" stylesheets="@../css/addEmployee.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.datadish.controller.AddInventoryItemController">
   <children>
      <Label layoutX="30.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Add Inventory Item" />

      <VBox layoutX="30.0" layoutY="80.0" spacing="20.0">
         <children>
            <HBox spacing="20.0">
               <Label alignment="CENTER_LEFT" prefWidth="100.0" style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Item ID" />
               <Label fx:id="lblSerID" alignment="CENTER_LEFT" prefWidth="300.0" style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #888;" text="Auto-generated ID" />
            </HBox>
            <HBox spacing="20.0">
               <Label alignment="CENTER_LEFT" prefWidth="100.0" style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Item Name" />
               <TextField fx:id="txtItemName" prefWidth="300.0" promptText="Enter item name" style="-fx-font-size: 14px;" />
            </HBox>
            <HBox spacing="20.0">
               <Label alignment="CENTER_LEFT" prefWidth="100.0" style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Quantity" />
               <TextField fx:id="txtItemQty" prefWidth="300.0" promptText="Enter quantity" style="-fx-font-size: 14px;" />
            </HBox>
            <HBox spacing="20.0">
               <Label alignment="CENTER_LEFT" prefWidth="100.0" style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Stock Level" />
               <TextField fx:id="txtStockLevel" prefWidth="300.0" promptText="Enter stock level" style="-fx-font-size: 14px;" />
            </HBox>
         </children>
      </VBox>

      <Button fx:id="btAddItem" layoutX="460.0" layoutY="325.0" mnemonicParsing="false" onAction="#addItemAction" style="-fx-background-color:#FF971D; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5;" text="Add Item" />
   </children>
</AnchorPane>
